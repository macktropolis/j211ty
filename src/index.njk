---
title: Homepage
layout: 'njk/templates/base.njk'
---

<div class="jumbotron">
    <h1>Welcome to {{ site.name }}</h1>
</div>

<section id="featured-articles" class="articles">
    <div class="container flow">
        <h1 class="section-title text-center">Featured Article</h1>
        <ul role="list" class="articles__list flow">
            {%- for post in collections.featured | reverse |  limitTo(1) -%}
                {% include 'njk/blocks/article-snippet.njk' %}
            {%- endfor -%}
        </ul>
    </div>
</section>

<section id="featured-articles" class="articles">
    <div class="container flow">
        <h1 class="section-title text-center">Latest Articles</h1>
        <ul role="list" class="articles__list flow">
            {%- for post in collections.post | reverse | limitTo(3) -%}
                {% include 'njk/blocks/article-snippet.njk' %}
            {%- endfor -%}
        </ul>
    </div>
</section>